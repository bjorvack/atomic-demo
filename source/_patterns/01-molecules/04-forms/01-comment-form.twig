<form method="post" action="{{ url }}" class="comment-form">
	<fieldset>
		<div class="form-group">
			<label for="comment-name">Name</label>
			<input id="comment-name" class="form-control" type="text" placeholder="Enter Your Name" />
		</div>
		<div class="form-group">
			<label for="comment-email">Email</label>
			<input id="comment-email" class="form-control" type="email" placeholder="Your email address" />
		</div>
		<div class="form-group">
			<label for="comment-url">URL</label>
			<input id="comment-url" class="form-control" type="url" placeholder="Website if you got one" />
		</div>
		<div class="form-group">
			<label for="comment-field">Comment</label>
			<textarea id="comment-field" class="form-control" rows="5" placeholder="Write you comment here"></textarea>
		</div>
		<input type="submit" class="btn btn-primary" value="Submit">
	</fieldset>
</form>